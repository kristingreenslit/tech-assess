<div class="comp-form"><br>
  <%= form_for @computer do |f| %>
    <p>
      <%= f.label :name, "Please enter a name for your computer: " %><br><br>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.radio_button :computer_type, 'Mac' %>
      <%= label :computer_type, 'Mac', :value => 'Mac' %>
      <%= f.radio_button :computer_type, 'PC' %>
      <%= label :computer_type, 'PC', :value => 'PC' %>
    </p>
    <p>
      <%= f.submit %>
    </p><br>
  <% end %>
</div><br><br>
  <div id="btns-main"><%=link_to "Back to My Computers", computers_path %></div>
