<div id="assessments">
<form action="assessment_form.asp" method="get">  <!-- _form.asp is where to send the form data -->
  <div class="mac-os">
  <h5>1. Which operating system do you have?</h5>
    <select name="os-version">
        <option value="10.5">10.5</option>
        <option value="10.6">10.6</option>
        <option value="10.7">10.7</option>
